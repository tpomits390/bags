{#
| About Section Component - Promotional/Hero style section
| Usage: {% include 'components.home.about-section' with {section: section_data} %}
#}

<section class="about-section py-12 lg:py-20 bg-gray-50">
    <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col lg:flex-row items-center gap-8 lg:gap-16">

            {# Image Section with Delivery Info #}
            <div class="w-full lg:w-1/2">
                <div
                    class="relative rounded-2xl overflow-hidden bg-gradient-to-br from-yellow-400 to-yellow-500 p-6 lg:p-8">
                    {# Main Product Image #}
                    <div class="text-center mb-6">
                        <img src="{{ section.image | default(asset('images/placeholder.png')) }}"
                            alt="{{ section.title | default('Mukhtmal stylish kids bags') }}"
                            class="w-full h-auto max-w-sm mx-auto drop-shadow-lg" loading="lazy">
                    </div>

                    {# Delivery Information Card #}
                    <div class="bg-white/95 backdrop-blur-sm rounded-xl p-4 shadow-lg border border-white/20">
                        <h4 class="font-bold text-gray-800 mb-3 text-lg">
                            {{ section.delivery_title | default('Delivery') }}
                        </h4>
                        <div class="space-y-2 text-sm">
                            <p class="font-medium text-gray-700">
                                {{ section.delivery_jeddah | default('All over the Kingdom') }}
                            </p>
                            <p class="text-gray-600">
                                {{ section.delivery_time_jeddah | default('Jeddah: 1 to 3 business days.') }}
                            </p>
                            <p class="text-gray-600">
                                {{ section.delivery_time_other | default('Other regions: 1 to 6 days.') }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            {# Content Section #}
            <div class="w-full lg:w-1/2">
                <div class="max-w-lg mx-auto lg:mx-0">
                    {# Main Title #}
                    <div class="mb-8">
                        <h2 class="text-3xl lg:text-4xl xl:text-5xl font-bold text-gray-800 mb-2">
                            {{ section.title | default('Mukhtmal') }}
                        </h2>
                        <p class="text-xl lg:text-2xl text-gray-600 font-light">
                            {{ section.subtitle | default('stylish kids bags') }}
                        </p>
                    </div>

                    {# About Header with Show Details Button #}
                    <div class="flex items-center justify-between mb-6 pb-4 border-b border-gray-200">
                        <h3 class="text-lg font-semibold text-gray-700">
                            {{ section.about_title | default('About Velvet') }}
                        </h3>
                        <button type="button"
                            class="show-details-btn bg-black text-white px-6 py-2 rounded-md hover:bg-gray-800 transition-all duration-300 group">
                            <span class="flex items-center">
                                <i
                                    class="fas fa-chevron-left mr-2 rtl:mr-0 rtl:ml-2 rtl:rotate-180 transition-transform duration-300 group-hover:translate-x-1 rtl:group-hover:-translate-x-1"></i>
                                {{ section.show_details_text | default('Show details') }}
                            </span>
                        </button>
                    </div>

                    {# Content Description #}
                    <div class="mb-8">
                        <p class="text-gray-600 leading-relaxed text-lg">
                            {{ section.content | default('Velvet is an innovative online store that aims to offer a
                            range of modern and unique products that combine elegance and technology') }}
                        </p>
                    </div>

                    {# Optional Call-to-Action Button #}
                    {% if section.cta_text %}
                    <div class="mt-8">
                        <a href="{{ section.cta_link | default('#') }}"
                            class="inline-flex items-center bg-primary hover:bg-primary/90 text-white px-8 py-4 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
                            {{ section.cta_text }}
                            <i
                                class="fas fa-arrow-right ml-3 rtl:ml-0 rtl:mr-3 rtl:rotate-180 transition-transform duration-300"></i>
                        </a>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>