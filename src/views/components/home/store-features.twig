{#
| Variable | Type | Description |
|---------------|--------|------------------------------------------------------------------|
| items[] | array | List of 3 features |
| items[].icon | string | SallaIcons css class `sicon-*` |
| items[].title | string | Title of the feature |
| items[].text | string | Subtitle for the feature |
| position | Int | Sorting number start from zero |
#}
<section class="relative py-8 overflow-hidden md:py-16 "
  style="background: linear-gradient(135deg, #fef7ed 0%, #f3f4f6 100%);">
  
  <div class="absolute top-0 left-0 rounded-full opacity-20 md:w-72 md:h-72"
    style="background: linear-gradient(45deg, #fbbf24, #f59e0b); transform: translate(-50%, -50%);"></div>
  <div class="absolute bottom-0 right-0 w-56 h-56 rounded-full opacity-15 md:w-80 md:h-80"
    style="background: linear-gradient(45deg, #60a5fa, #3b82f6); transform: translate(50%, 50%);"></div>

  <div class="container relative z-10">
    <div class="mb-8 text-center md:mb-12">
      <h2 class="mb-4 text-2xl font-bold text-gray-800 md:text-3xl lg:text-4xl">WHY TO BUY FROM US</h2>
    </div>
    <div class="grid max-w-4xl grid-cols-1 gap-6 mx-auto sm:grid-cols-3 lg:grid-cols-3 md:gap-8 xl:gap-12">
      {% for item in items %}
      <div class="text-center s-block--features__item">
        <div class="flex justify-center mb-4 feature-icon">
          <div class="flex items-center justify-center w-20 h-20 bg-yellow-400 shadow-lg rounded-xl">
            <i class="{{ item.icon }} text-3xl text-gray-800"></i>
          </div>
        </div>
        <h3 class="mb-3 text-xl font-semibold text-gray-800">{{ item.title }}</h3>
        <p class="text-gray-600">{{ item.text }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>